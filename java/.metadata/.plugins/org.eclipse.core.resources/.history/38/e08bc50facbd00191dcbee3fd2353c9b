package comm.example7;

public class ArrayDemo {
	
	public void mergesort(int low, int high,int[] arr){
		if(low<high) {
			int mid= (low+high)/2;
			this.mergesort(low,mid,arr);
			this.mergesort(mid+1,high,arr);
			this.merges(low,mid,high,arr);
		}
	}
	
	public int[] merges(int low, int mid, int high,int[] arr){
		int i= low;
		int j= mid;
		int k = low;
		int[] a =arr;
		int[] b = null;
		
		while(i<=mid&&j+1<=high) {
			if(a[i]<a[j]) {
				b[k++]=a[i++];
			}
			else {
				b[k++]=a[j++];
			}
		}
		
		while(i<=mid) {
			b[k++]=a[i++];
		}
		
		while(j<=high) {
			b[k++]=a[j++];
		}
		
		for(i=0; i<a.length; i++) {
			a[i]=b[i];
		}
		
		return a;
	}
}
