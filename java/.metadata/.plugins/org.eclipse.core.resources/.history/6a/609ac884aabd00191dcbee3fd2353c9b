package comm.example7;

public class ArrayDemo {
	public int[] a= {
			100,1,-20,30,0
	},b;
	
	
	public void mergesort(int low, int high){
		if(low<high) {
			int mid= (low+high)/2;
			mergesort(low,mid);
			mergesort(mid+1,high);
			merges(low,mid,high);
		}
	}
	
	public void merges(int low, int mid, int high){
		int i= low;
		int j= mid;
		int k = low;
		
		while(i<=mid&&j+1<=high) {
			if(this.a[i]<this.a[j]) {
				this.b[k++]=this.a[i++];
			}
			else {
				this.b[k++]=this.a[j++];
			}
		}
		
		while(i<=mid) {
			this.b[k++]=this.a[i++];
		}
		
		while(j<=high) {
			this.b[k++]=this.a[j++];
		}
		
		for(i=0; i<a.length; i++) {
			this.a[i]=this.b[i];
		}
	}
	
	public void useSort() {
		this.mergesort(0,4);
		System.out.println(a.toString());
	}
}
